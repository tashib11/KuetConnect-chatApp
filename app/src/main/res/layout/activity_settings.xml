<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacklight"
    android:id="@+id/mainLayout"
    tools:context="echonest.sociogram.connectus.SettingsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--cover-->
            <ImageView
                android:id="@+id/coverIv"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:scaleType="fitXY"
                android:background="#3F2967">

            </ImageView>
            <!--    <ImageView-->
            <!--        android:id="@+id/backArrow"-->
            <!--        android:layout_width="30dp"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginStart="10dp"-->
            <!--        android:layout_marginTop="10dp"-->
            <!--        android:layout_marginEnd="10dp"-->
            <!--        android:layout_marginBottom="10dp"-->
            <!--        android:src="@drawable/backarrow"-->
            <!--        android:background="@color/white"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="100dp">

                <ImageView
                    android:id="@+id/avatarIv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:background="#3F2967"
                    android:scaleType="fitXY"
                    app:civ_border_color="#3F2967"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#77000000">

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/emailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/professionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>




                <!--        <EditText-->
                <!--            android:id="@+id/etUserName"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:ems="10"-->
                <!--            android:hint="Enter your name"-->
                <!--            android:inputType="text"-->
                <!--            android:textColor="@color/white"-->
                <!--            android:textColorHint="@color/bar" />-->






            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3F2967"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_edit_24" />

</RelativeLayout>