<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blacklight"
    tools:context="echonest.sociogram.connectus.aboutActivity">

  <!-- App Title -->
  <TextView
      android:id="@+id/appTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="ConnectUs App"
      android:textSize="28sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:gravity="center"
      android:paddingBottom="8dp" />

  <!-- Short Description -->
  <TextView
      android:id="@+id/descriptionText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/Description"
      android:textColor="#CCCCCC"
      android:textSize="18sp"
      android:lineSpacingExtra="4dp"
      app:layout_constraintTop_toBottomOf="@id/appTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingBottom="16dp" />

  <!-- Features -->
  <TextView
      android:id="@+id/featuresTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Key Features:"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="#FFFFFF"
      app:layout_constraintTop_toBottomOf="@id/descriptionText"
      app:layout_constraintStart_toStartOf="parent"
      android:paddingBottom="4dp" />

  <TextView
      android:id="@+id/featuresText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="• Story sharing\n• Audio and video calls\n• Media sharing (images and videos)\n• Real-time messaging\n• Secure user profiles"
      android:textColor="#BBBBBB"
      android:textSize="16sp"
      android:lineSpacingExtra="6dp"
      app:layout_constraintTop_toBottomOf="@id/featuresTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
